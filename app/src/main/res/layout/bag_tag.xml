<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">
<!--    android:background="@drawable/card_background"-->

    <ImageView
        android:id="@+id/iconImageView1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/bag_sync" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/bagTagTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bag Tag"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagIdTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="68344805679"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tagIdTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SQ123456"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dateTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="2024-07-09 10.00 am"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
