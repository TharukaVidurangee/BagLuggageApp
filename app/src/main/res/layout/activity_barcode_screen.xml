<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarcodeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/roomEditText"
            android:layout_width="264dp"
            android:layout_height="51dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="108dp"
            android:background="@null"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:textColor="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="104dp"
            android:hint="enter room no"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tagEditText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tagEditText"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/tagEditText"
            android:layout_width="314dp"
            android:layout_height="83dp"
            android:layout_below="@+id/roomEditText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border"
            android:hint="enter bag tag"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomEditText"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/saveButton"
            android:layout_width="52dp"
            android:layout_height="46dp"
            android:src="@drawable/baseline_save_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="357dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Label"
            app:layout_constraintTop_toBottomOf="@+id/roomEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="16dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:padding="16dp" />

</RelativeLayout>
